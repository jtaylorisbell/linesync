# Lakebase (PostgreSQL) Configuration
LAKEBASE_HOST=your-lakebase-host.cloud.databricks.com
LAKEBASE_PORT=5432
LAKEBASE_DATABASE=inventory_demo
LAKEBASE_USER=lakebase
LAKEBASE_SSLMODE=require
LAKEBASE_INSTANCE_NAME=mfg-intralogistics-optimization
LAKEBASE_USE_OAUTH=true

# Databricks Configuration (for OAuth token generation)
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# Inventory Settings (optional, defaults shown)
INVENTORY_REORDER_POINT=10
INVENTORY_REORDER_QTY=24
INVENTORY_DEBOUNCE_SECONDS=3

# User Settings (for local development)
# In Databricks Apps, user is extracted from X-Forwarded-Email header automatically
USER_EMAIL=developer@example.com
USER_NAME=Developer

# Application Settings
LOG_LEVEL=INFO
