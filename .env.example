# =============================================================================
# LineSync Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# All values shown are examples - replace with your actual configuration.
# =============================================================================

# -----------------------------------------------------------------------------
# DATABRICKS SDK CONFIGURATION
# -----------------------------------------------------------------------------
# These settings control how the Databricks SDK authenticates.
# The SDK is used for:
#   - Generating OAuth tokens for Lakebase database connections
#   - AI packing slip parsing (calls GPT-4 via Databricks Model Serving)
#
# DATABRICKS_HOST: Workspace URL
#   - Format: https://<workspace>.cloud.databricks.com
#   - Used in: src/inventory_demo/config.py -> LakebaseSettings.get_password()
#   - Used in: src/inventory_demo/api/packing_slip_parser.py -> WorkspaceClient
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# -----------------------------------------------------------------------------
# LAKEBASE (POSTGRESQL) DATABASE CONNECTION
# -----------------------------------------------------------------------------
# Lakebase is Databricks' managed PostgreSQL service.
# These settings configure the database connection used by the API.
# Used in: src/inventory_demo/config.py -> LakebaseSettings
#
# LAKEBASE_HOST: Database hostname from Lakebase instance details
#   - Found in: Databricks workspace > SQL > Lakebase > your instance > Connection
LAKEBASE_HOST=instance-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx.database.cloud.databricks.com

# LAKEBASE_PORT: PostgreSQL port (always 5432 for Lakebase)
LAKEBASE_PORT=5432

# LAKEBASE_DATABASE: Database name (default: databricks_postgres)
LAKEBASE_DATABASE=databricks_postgres

# LAKEBASE_USER: Your Databricks email address
#   - Lakebase uses Databricks identity for authentication
LAKEBASE_USER=your.email@company.com

# LAKEBASE_SSLMODE: SSL connection mode (always "require" for Lakebase)
LAKEBASE_SSLMODE=require

# LAKEBASE_INSTANCE_NAME: Lakebase instance name for OAuth token generation
#   - Found in: Databricks workspace > SQL > Lakebase > instance name
#   - Used in: src/inventory_demo/config.py -> OAuthTokenManager.get_token()
LAKEBASE_INSTANCE_NAME=your-instance-name

# LAKEBASE_USE_OAUTH: Enable automatic OAuth token generation (recommended)
#   - true: generates OAuth tokens using Databricks SDK (recommended)
#   - false: requires LAKEBASE_PASSWORD to be set manually
LAKEBASE_USE_OAUTH=true

# LAKEBASE_PASSWORD: Static password (optional, only needed if USE_OAUTH=false)
# LAKEBASE_PASSWORD=

# -----------------------------------------------------------------------------
# INVENTORY BUSINESS LOGIC
# -----------------------------------------------------------------------------
# These settings control inventory management behavior.
# Used in: src/inventory_demo/config.py -> InventorySettings
#
# INVENTORY_REORDER_POINT: Stock level that triggers replenishment signal
#   - When on_hand_qty drops to or below this value, a signal is created
#   - Used in: src/inventory_demo/core/inventory_service.py -> record_consume_event()
INVENTORY_REORDER_POINT=10

# INVENTORY_REORDER_QTY: Suggested quantity for replenishment orders
#   - Included in replenishment signals for warehouse team reference
INVENTORY_REORDER_QTY=24

# INVENTORY_DEBOUNCE_SECONDS: Minimum seconds between duplicate scans
#   - Prevents accidental double-scans of the same barcode
#   - Used in: frontend/src/components/BarcodeScanner.tsx (client-side debounce)
INVENTORY_DEBOUNCE_SECONDS=3

# -----------------------------------------------------------------------------
# USER IDENTITY (LOCAL DEVELOPMENT ONLY)
# -----------------------------------------------------------------------------
# In production (Databricks Apps), user identity comes from X-Forwarded-* headers.
# These settings simulate a logged-in user for local development.
# Used in: src/inventory_demo/api/user.py -> get_current_user()
#
# USER_EMAIL: Simulated user email for local dev
USER_EMAIL=developer@company.com

# USER_NAME: Display name for local dev user
USER_NAME=Developer

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# LOG_LEVEL: Logging verbosity (DEBUG, INFO, WARNING, ERROR)
#   - DEBUG: Verbose output including SQL queries and detailed traces
#   - INFO: Normal operation logs (recommended for development)
#   - Used in: src/inventory_demo/config.py -> Settings.log_level
LOG_LEVEL=INFO
